<p id="notice"><%= notice %></p>

<h1>Collections</h1>

<%= link_to 'New Collection', new_collection_path, class: 'btn btn-primary' %>

<table class="table table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Year</th>
      <th>Brand</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @collections.each do |collection| %>
      <tr>
        <td><%= link_to collection.name, collection %></td>
        <td><%= collection.year %></td>
        <td><%= collection.brand.name %></td>
        <td><%= link_to fa_icon('pencil'), edit_collection_path(collection) %></td>
        <td><%= link_to fa_icon('trash-o'), collection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
